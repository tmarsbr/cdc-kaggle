{
    "dataset_name": "teocalvo/teomewhy-loyalty-system",
    
    "aws": {
        "bucket": "meudatalake-raw",
        "prefix": "upcell",
        "region": "us-east-1"
    },

    "timer": {
        "unit": "hours",
        "value": 6
    },

    "cleanup": {
        "enabled": true,
        "keep_last_n_cdc_files": 5
    },

    "tables": [
        {
            "sep": ";",
            "name": "clientes",
            "date_field": "DtAtualizacao",
            "pk": "idCliente"
        },
        {
            "sep": ";",
            "name": "produtos",
            "date_field": "",
            "pk": "IdProduto"
        },
        {
            "sep": ";",
            "name": "transacoes",
            "date_field": "DtCriacao",
            "pk": "IdTransacao"
        },
        {
            "sep": ";",
            "name": "transacao_produto",
            "date_field": "vlProduto",
            "pk": "idTransacaoProduto"
        }
    ]
}